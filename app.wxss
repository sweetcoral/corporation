/**app.wxss**/



.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.introduction_title{
  margin: 5rpx;
  text-align: center;
  font-weight: bold;
  font-size: 40rpx;
  color: #535353;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.introduction_department{
  padding: 5rpx 20rpx;
  font-weight: bold;
  font-size: 33rpx;
  margin-top: 10rpx;
}

.introduction_text {
  padding: 10rpx;
  font-size: 30rpx;
  /* line-height: 35rpx; */
}

.introduction_extext {
  padding: 20rpx;
  font-size: 30rpx;
  font-style: italic;
}

.introction_images{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.blank {
  height: 500rpx;
}

.btn-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 8px #999 inset; 
}
.plain-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 10px #bbbec4 inset; 
}