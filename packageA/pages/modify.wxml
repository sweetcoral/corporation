<form bindsubmit="formSubmit">

  <mp-cells ext-class="my-cells" title="修改个人资料">
    <mp-cell title="姓名---" ext-class="">
      <input class="weui-input" type="text" name="username" value="{{username}}" placeholder="请输入姓名" />
    </mp-cell>

    <mp-cell title="爱好---" ext-class="">
      <input class="weui-input" type="text" name="love" value="{{love}}" placeholder="请输入您的爱好" />
    </mp-cell>

    <mp-cell title="班级---" ext-class="">
      <input class="weui-input" type="text" name="grade" value="{{grade}}" placeholder="请输入班级" />
    </mp-cell>

    <mp-cell title="性别---" ext-class="">
      <radio-group name="gender">
        <label>
          <radio value="男" checked="{{gender==='男'?'checked':''}}" />男
        </label>
        <label>
          <radio value="女" checked="{{gender==='女'?'checked':''}}" />女
        </label>
      </radio-group>
    </mp-cell>

  </mp-cells>
<text>\n\n</text>
  <button formType="submit" class="weui-btn" type="primary">保存</button>

</form>